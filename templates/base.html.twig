<!DOCTYPE html>
<html lang="en" class="h-100">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100">
        <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
            <div class="sidebar-brand d-none d-md-flex">
                <a class="nav-link" href="/">
                    <div class="sidebar-brand-full">
                        <img class="navbar-brand-full" src="{{ asset('build/images/logo.png') }}" width="90" height="25" alt="Logo">
                    </div>
                    <div class="sidebar-brand-narrow">
                        <img class="navbar-brand-full" src="{{ asset('build/images/logo.png') }}" width="90" height="25" alt="Logo">
                    </div>
                </a>
            </div>
            <ul class="sidebar-nav simplebar-scrollable-y" data-coreui="navigation" data-simplebar="init">
                <div class="simplebar-wrapper" style="margin: 0;">
                    <div class="simplebar-height-auto-observer-wrapper">
                        <div class="simplebar-height-auto-observer"></div>
                    </div>
                    <div class="simplebar-mask">
                        <div class="simplebar-offset" style="right: 0; bottom: 0;">
                            <div class="simplebar-content-wrapper" tabindex="0" role="region" aria-label="scrollable content">
                                <div class="simplebar-content" style="padding: 0;">
                                    <div class="nav-item">
                                        <a class="nav-link" href="{{ path('home') }}">
                                            Dashboard<span class="badge badge-sm bg-info ms-auto">NEW</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </ul>
            <button class="sidebar-toggler" type="button" data-coreui-toggle="unfoldable"></button>
        </div>

        <div class="wrapper d-flex flex-column min-vh-100 bg-light">
            <header class="header header-sticky mb-4">
                <div class="container-fluid">
                    <ul class="nav navbar-nav ml-auto mr-4 ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link py-0" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                {{ app.user.username }}
                            </a>
                            <div class="dropdown-menu dropdown-menu-end pt-0">
                                <a class="dropdown-item" href="{{ path('profile') }}"><i class="fa fa-user"></i> Profile</a>
                                <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fa fa-lock"></i> Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="header-divider"></div>
                <div class="container-fluid">
                    <nav aria-label="breadcrumb">
                        <div class="container">
                            {% block breadcrumbs %}{% endblock %}
                        </div>
                    </nav>
                </div>
            </header>
            <div class="body flex-grow-1 px-3">
                <main role="main" class="main flex-shrink-0">
                    <div class="container-lg">
                        {% block body %}{% endblock %}
                        {% include 'flashes.html.twig' %}
                    </div>
                </main>
            </div>
            <footer class="footer">
                <div>All right reserved AY Corp</div>
            </footer>
        </div>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
