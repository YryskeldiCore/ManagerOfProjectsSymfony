<!DOCTYPE html>
<html lang="en" class="h-100">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100">
        <header>
            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('home') }}">App</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav ml-auto">
                            {% if app.user %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('home') }}">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('auth.reset') }}">Reset</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('auth.signup') }}">SignUp</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="main flex-shrink-0">
            <div class="container">
                {% block breadcrumbs %}{% endblock %}
                {% include 'flashes.html.twig' %}
                {% block body %}{% endblock %}
            </div>
        </main>

        <footer class="footer mt-auto py-3">
            <div class="container">
                <span>Â© {{ "now"|date("Y") }} All rights reserved</span>
            </div>
        </footer>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
