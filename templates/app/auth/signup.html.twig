{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {% include 'flashes.html.twig' %}

                        <h1>Sign Up</h1>

                        <p class="text-muted">Create your account</p>

                        {{ form_start(form) }}

                        <div class="input-group mb-3">
                            <span class="input-group-text">@</span>
                            {{ form_widget(form.email, {'attr': {'placeholder': 'Email', 'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="input-group mb-4">
                            <span class="input-group-text">
                                    <i class="icon-lock"></i>
                            </span>
                            {{ form_widget(form.password, {'attr': {'placeholder': 'Password', 'class': 'form-control'}}) }}
                            {{ form_errors(form.password) }}
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-block btn-success">Create Account</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                    <div class="card-footer p-4">
                        <div class="row">
                            <div class="col-12">
                                <a class="btn btn-primary btn-block btn-facebook" href="{{ path('connect_facebook_start') }}">
                                    <span>facebook</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}